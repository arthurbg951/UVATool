  "version": "2.0.0",
  "tasks": [
    {
      "label": "UVATool",
      "type": "shell",
      "command": "cd ${workspaceFolder}/src && ${workspaceFolder}/venv/bin/python3.9 UVAToolUi.py",
      "windows": {
        "command": "cd ${workspaceFolder}\\src ; ${workspaceFolder}\\venv\\Scripts\\python.exe UVAToolUi.py"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "problemMatcher": []
    },
    // {
    //   "label": "build",
    //   "type": "shell",
    //   "command": "echo 'não implementado'",
    //   "windows": {
    //     "command": "echo 'não implementado'"
    //   },
    //   "group": "build",
